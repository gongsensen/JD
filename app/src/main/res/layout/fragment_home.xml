<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"></com.youth.banner.Banner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="5dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rp_sao_qr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:drawableTop="@mipmap/as5"
                    android:gravity="center"
                    android:text="扫啊扫"
                    android:textColor="#ccc6c6" />
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/rel"
                android:background="@drawable/white_radius"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1">
                <!--<com.bawei.myjdproject.acyivity.view.ClearEditText-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:drawableLeft="@mipmap/a_u"-->
                <!--android:drawablePadding="20dp"-->
                <!--android:id="@+id/ed_sousuo"-->
                <!--android:hint="点击输入搜索"/>-->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/a_u" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="搜索你想要的商品"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/jiqiren" />
            </RelativeLayout>


            <RadioGroup
                android:layout_width="50dp"
                android:layout_height="50dp">

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:drawableTop="@mipmap/xiaoxi"
                    android:gravity="center"
                    android:text="消息"
                    android:textColor="#ccc6c6" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>