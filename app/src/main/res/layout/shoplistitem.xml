<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_showlist_img"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/txt_showlist_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="劳力士Rolex 日志型系列 116200 63200 自动机械钢带男表联保正品" />

    <TextView
        android:id="@+id/txt_showlist_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="42800.00"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@mipmap/hotsell" />

        <TextView
            android:id="@+id/txt_showlist_commenton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":151516评价" />

        <TextView
            android:id="@+id/txt_showlist_goodreception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="151516好评" />
    </LinearLayout>
</LinearLayout>